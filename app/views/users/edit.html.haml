#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
          - current_user.errors.full_messages_for(:name).each do |message|
            .user-validation-error-mesage
              = message
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
          - current_user.errors.full_messages_for(:email).each do |message|
            .user-validation-error-mesage
              = message
        .actions
          = f.submit "Update", class: 'btn'
