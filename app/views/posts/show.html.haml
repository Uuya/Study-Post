.post-show
  %h2.post-title
    = icon("fas", "book-open")
    = @post.title
    .post-date
      = @post.studied_at
  - if @post.user.id == current_user.id
    = link_to edit_post_path(@post) do
      = icon("fas", "pencil-alt", class: "post-edit-icon fa-lg ")
    = link_to post_path(@post), method: :delete, data: { confirm: '削除しますか？' } do
      = icon("fas", "trash", class: "post-trash-icon fa-lg")
  .post-contents
    .post-content
      %p.post-content-item
        学習時間
      %p.post-content-time
        = @post.study_time
        %span 時間
      %p.post-content-time
        = @post.study_minutes
        %span 分
    .post-content
      %p.post-content-item
        学習方法
      %p.post-content-text
        = @post.study_method
    .post-content
      %p.post-content-item
        学習内容
      %p.post-content-text
        = @post.content
    .post-content
      %p.post-content-item
        反省点
      %p.post-content-text
        = @post.reflection
    .post-content
      %p.post-content-item
        次回学習内容
      %p.post-content-text
        = @post.next_study
    .post-content
      %p.post-content-item
        その他
      %p.post-content-text
        = @post.other
